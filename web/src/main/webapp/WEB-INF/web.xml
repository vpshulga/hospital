<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>New Servlet App</display-name>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>
            web.filters.EncodingFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LocaleFileter</filter-name>
        <filter-class>
            web.filters.LocaleFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LocaleFileter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>
            web.filters.AuthFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ExceptionsFilter</filter-name>
        <filter-class>
            web.filters.ExceptionsFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ExceptionsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
